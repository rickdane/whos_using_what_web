<br xmlns="http://www.w3.org/1999/html"/>
<ul data-role="listview" data-divider-theme="b" data-inset="true">
  <li data-role="list-divider" role="heading">
    Results
  </li>
  <br/>
  <br/>
  <% @results.each do |result|

    company = result[:company]
    jobs = result[:jobs]
    linkedin_search_urls = result[:linkedin_search_urls]

  %>

      <div class='hto_result'>
        <div class='hto_company_div'>

          <%= company[:name] %>
          </a>
          <br/>
        </div>
        <br/>

        <div class='hto_inner'>

          <% jobs.each do |job| %>
              <strong> <%= job[:title] %> </strong> in <i><%= job[:location] %> </i> -  <%= job[:description] %>
              <br/>
              <br/>
          <% end %>
          </br>
          Connect with LinkedIn:
          <br/>
          <br/>
          <a href="<%= linkedin_search_urls[:hiring] %>" target='_blank'> Human Resources </a>
          <br/>
          <a href="<%= linkedin_search_urls[:hiring] %>" target='_blank'> Keyword </a>
        </div>
      </div>
      <br/>
      <br/>
  <% end %>

</ul>